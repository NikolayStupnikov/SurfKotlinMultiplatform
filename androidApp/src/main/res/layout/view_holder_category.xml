<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="ru.nikolay.stupnikov.surfkmp.android.ui.filter.category.CategoryItemViewModel" />
    </data>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="@{viewModel.isCheckedView}"
        android:text="@{viewModel.nameView}"
        android:onCheckedChanged="@{(view, checked) -> viewModel.onItemClick(checked)}" />

</layout>